- brands.each do |brand|
  %tr
    %td= brand.id
    %td= brand.name
    %td
      = link_to brand, class: "ca-actions" do
        %i.fa.fa-file-text.text-navy
      = link_to edit_brand_path(brand), class: "ca-actions" do
        %i.fa.fa-pencil.text-navy
      = link_to brand, {method: :delete, data: {confirm: '¿Estás seguro?'}} do
        %i.fa.fa-remove.text-navy
