= form_for(@brand) do |f| 
  - if @brand.errors.any? 
    %div#error_explanation
      %h2= pluralize(@brand.errors.count, "error") + "prohibited this brand from being saved:"
      %ul
        - @brand.errors.full_messages.each do |message|
          %li= message

  %div.col-sm-6
    %div.form-group
      = f.text_field :name, placeholder: "Nombre", class: "form-control", required: true

  %div.col-sm-12
    = link_to "Cancelar", brands_path, class: "btn btn-white"
    = f.submit "Guardar Cambios", class: "btn btn-primary ca-suc"
