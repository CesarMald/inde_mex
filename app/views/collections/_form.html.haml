= form_for(@collection) do |f| 
  - if @collection.errors.any? 
    %div#error_explanation
      %h2= pluralize(@collection.errors.count, "error") + "prohibited this collection from being saved:"
      %ul
        - @collection.errors.full_messages.each do |message| 
          %li= message

  %div.col-sm-6
    %div.form-group
      = f.text_field :name, placeholder: "Nombre", class: "form-control", required: true

  %div.col-sm-6
    %div.form-group
      = f.text_field :text_link, placeholder: "Texto del Link", class: "form-control", required: true

  %div.col-sm-12
    %div.form-group
      = f.text_field :url_link, placeholder: "Url", class: "form-control", required: true

  %div.form-group.col-sm-12
    = f.text_area :description, placeholder: "Descripci√≥n", class: "form-control"

  %div.col-sm-12
    = link_to "Cancelar", collections_path, class: "btn btn-white"
    = f.submit "Guardar Cambios", class: "btn btn-primary ca-suc"


