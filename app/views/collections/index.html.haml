%div.ibox-title
  %h5= "Listado de Colecciones"
  = link_to "Nuevo", new_collection_path, class: "btn btn-primary ca-crear"

%div.ibox-content
  %div.row
    %div.col-sm-4
      %div.input-group
        %input{type: "text", placeholder: "Search", class: "input-sm form-control"}
        %span.input-group-btn
          %button{type: "button", class: "btn btn-sm btn-primary"} Buscar

  %div.table-responsive
    %table.table.table-striped
      %thead
        %td ID
        %th Nombre
        %th Link del Text
        %th Url 
        %th Acciones
      %tbody
        - @collections.each do |collection|
          %tr
            %td= collection.id
            %td= collection.name
            %td= collection.text_link
            %td= collection.url_link
            %td
              = link_to collection, class: "ca-actions" do
                %i.fa.fa-file-text.text-navy
              = link_to edit_collection_path(collection), class: "ca-actions" do
                %i.fa.fa-pencil.text.navy
              = link_to collection, {method: :delete, data: {confirm: '¿Estás seguro?'}} do
                %i.fa.fa-remove.text-navy


