.nav-container
  %a#top
  %nav
    .nav-utility
      .wp-info
        %p
          Búscanos en Whatsapp
          %i.fa.fa-whatsapp
          %a{href: ""} 818 645 321
          \/
          %a{href: ""} 818 645 321
    .nav-bar
      .module.left
        = link_to root_path do
          = image_tag("logo.jpg", alt: "Foundry", class: "logo logo-light")
          = image_tag("logo.jpg", alt: "Foundry", class: "logo logo-dark")
      .module.widget-handle.mobile-toggle.right.visible-sm.visible-xs.chops
        %i.ti-menu
      .module-group.right
        .module.left
          %ul.menu
            %li.has-dropdown
              = link_to "Mi Cel", "#"
              %ul.mega-menu
                - @brands.each do |brand|
                  %li
                    %ul
                      %li
                        %span.title= brand.name.titleize
                        - brand.models.each do |model|
                          %li
                            = link_to model.name.titleize, model_section_path(model)
            %li.has-dropdown
              = link_to "Colecciones", collections_section_path
              %ul.mega-menu
                - @collections.each do |collection_slide|
                  %li
                    - collection_slide.each do |collection|
                      %ul
                        %li
                          = link_to collection.name, collection_section_path(collection) 
            %li
              = link_to "Lo más nuevo", newest_section_path
            %li
              = link_to "Oferta", offer_section_path
            %li
              = link_to "Contáctanos", contact_section_path
        / end of menu module
        .module.widget-handle.search-widget-handle.left
          .search
            %i.ti-search
            %span.title Search Site
          .function
            = search_form_for @q, url: search_section_path, class: "search-form" do |f|
              = f.search_field :name_or_description_or_code_cont, placeholder: "Buscar"

        .module.widget-handle.cart-widget-handle.left
          = render 'home/sessions'
        
        - if user_signed_in? && current_user.admin?
          .module.widget-handle.cart-widget-handle.left
            %div
              = link_to products_path do
                %i.ti-panel
                %span.title Administrar Sitio
        .module.widget-handle.cart-widget-handle.left.vart
          .cart
            %i.ti-shopping-cart
            %span.label.number 2
            %span.title Shopping Cart
          .function
            .widget
              %h6.title Shopping Cart
              %hr
                %ul.cart-overview
                  %li
                    = link_to "#" do
                      = image_tag("01-demo-pic.jpg", alt: "Product")
                      .description
                        %span.product-title Canvas Backpack
                        %span.price.number $39.90
                  %li
                    = link_to "#" do
                      = image_tag("01-demo-pic.jpg", alt: "Product")
                      .description
                        %span.product-title Vintage Camera
                        %span.price.number $249.50
                %hr
                  .cart-controls
                    %a.btn.btn-sm.btn-filled.mr-hover{:href => "cart.html"} Cotizar
                    .list-inline.pull-right
                      %span.cart-total Total:
                      %span.number $289.40
            / end of widget
      / end of module group
