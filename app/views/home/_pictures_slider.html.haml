%div.col-md-6.col-sm-6.col-xs-12
  %div.image-slider.slider-thumb-controls.controls-inside
    - if product.on_offer
      %span.label Sale
    %ul.slides
      - if pictures.empty?
        %li
          = image_tag product.main_picture, alt: "image"
      - else
        - pictures.each do |picture|
          %li
            = image_tag picture.image_url, alt: "image"
