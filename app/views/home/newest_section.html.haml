%section.double-ban
  .container
    .row
      - @interior_builders.each do |interior_builder|
        .col-sm-6
          = link_to interior_builder.url_link, class: "backstreet" do
            = image_tag interior_builder.main_picture, class: "mb24"
            .water-bottom
              %h3.jfk-bottom= interior_builder.hover_title
              %p.slogan-bottom= interior_builder.hover_description
          = link_to interior_builder.url_link do
            %h4.mb8.uppercase= interior_builder.title
          %p.mb30= interior_builder.description

%section.c-sip
  %div.container
    %div.row
      %div.col-md-2.col-sm-4.masonry-item.col-xs-12
        %div.select-option
          %i.ti-angle-down
          = form_tag newest_section_path, id: "products_sort", method: :get, remote: true do
            = select_tag "product_order", options_for_select(products_order_combo), prompt: "Sort by"
      
    %div.row
      %div.col-sm-12
        %hr
    %div.row.masonry#products_section
      = render 'products', products: @products, type: "newest"
      
