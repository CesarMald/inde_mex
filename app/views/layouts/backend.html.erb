<!DOCTYPE html>
<html>
  <head>
    <title>Idenmex</title>
    <%= stylesheet_link_tag    'backend', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'backend', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <%= render 'shared/navigation_bar' %>
      <div id="page-wrapper" class="gray-bg dashbard-1">

        <div class="row border-bottom">
          <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
              <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
              <li>
                <span class="m-r-sm text-muted welcome-message">Bienvenido</span>
              </li>
              <li class="dropdown">
                <%= link_to orders_path, class: "dropdown-toggle count-info", data: {toggle: "dropdown"} do %>
                  <i class="fa fa-envelope"></i>  
                  <span class="label label-warning"><%= Order.unseen.count %></span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, {method: :delete} do %>
                  <i class="fa fa-sign-out"></i> Logout
                <% end%>
                  
              </li>
            </ul>
          </nav>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <% if flash[:notice] %><p class="alert alert-success"><%= notice %></p><% end %>
                <% if flash[:alert] %><p class="alert alert-danger"><%= alert %></p><% end %>
                <%= yield %>
              </div>
            </div>
          </div>
        </div> 
      </div>
  </body>
</html>
