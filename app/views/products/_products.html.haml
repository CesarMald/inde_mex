- products.each do |product|
  %tr
    %td= product.id
    %td= product.name
    %td= product.code
    %td= product.model.name
    %td= product.brand.name
    %td= product.regular_price
    %td= product.offer_price
    %td
      = link_to product, class: "ca-actions" do
        %i.fa.fa-file-text.text-navy
      = link_to edit_product_path(product), class: "ca-actions" do
        %i.fa.fa-pencil.text-navy
      = link_to product, {method: :delete, data: {confirm: '¿Estás seguro?'}} do
        %i.fa.fa-remove.text-navy
