%div.ibox-title
  %h5= "Listado de Productos"
  = link_to "Nuevo", new_product_path, class: "btn btn-primary ca-crear"

%div.ibox-content
  %div.row
    = search_form_for @q, remote: true do |f|
      %div.col-sm-4.mb-xs
        = f.select :model_id_eq, models_combo, {include_blank: "Modelo"}, {class: "input-sm form-control input-s-sm inline"}
      %div.col-sm-4.mb-xs
        = f.select :brand_id_eq, brands_combo, {include_blank: "Marca"}, {class: "input-sm form-control input-s-sm inline"}
      %div.col-sm-4
        %div.input-group
          = f.text_field :name_or_code_cont, {placeholder: "Search", class: "input-sm form-control"}
          %span.input-group-btn
            = f.submit "Buscar", class: "btn btn-sm btn-primary"

  %div.table-responsive
    %table.table.table-striped
      %thead
        %th ID
        %th Nombre
        %th CÃ³digo
        %th Modelo
        %th Marca
        %th Precio Mayorista
        %th Precio Regular
        %th Acciones
      %tbody#products_result
        = render 'products', products: @products
