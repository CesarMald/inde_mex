%div.ibox-title
  %h5= "Productos relacionados a: " + @product.name
  = link_to "Agregar", new_product_related_product_path(@product), class: "btn btn-primary ca-crear"

%div.ibox-content
  %div.row.right
    = search_form_for @q, url: product_related_products_path(@product), remote: true do |f|
      %div.col-sm-4.mb-xs
        = f.select :collection_id_eq, collections_combo, {include_blank: "Colección"}, {class: "input-sm form-control input-s-sm inline"}
      %div.col-sm-4.mb-xs
        = f.text_field :name_cont, placeholder: "Nombre", class: "input-sm form-control"
      %div.col-sm-4
        %div.input-group
          %span.input-group-btn
            = f.submit "Buscar", class: "btn btn-sm btn-primary"
  %br
  %div.table-responsive
    %table.table.table-striped
      %thead
        %th Nombre
        %th Colección
        %th Marca
        %th Equipo
        %th Acciones
      %tbody#products_result
        = render 'related_products', related_products: @related_products

