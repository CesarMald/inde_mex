- users.each do |user|
  %tr
    %td= user.id
    %td= user.complete_name
    %td= user.email
    %td= role_to_s (user.role)
    %td= status_to_s (user.status)
    %td
      = link_to edit_user_path(user), class: "ca-actions" do
        %i.fa.fa-pencil.text-navy
      = link_to user, { method: :delete, data: { confirm: "¿Estás seguro?" } } do
        %i.fa.fa-remove.text-navy
      = link_to edit_password_user_path(user), class: "ca-actions" do
        %i.fa.fa-ellipsis-h.text-navy

