%div.ibox-title
  %h5= "Editar Contraseña"

%div.ibox-content.ca-forms-god
  %div.row
    = form_for(@user, url: update_password_user_path(@user), method: :put) do |f| 
      - if @user.errors.any? 
        %div#error_explanation
          %h2= pluralize(@user.errors.count, "error") + "prohibited this user from being saved:"
          %ul
            - @user.errors.full_messages.each do |message| 
              %li= message
    
      %div.col-sm-12
        %div.form-group
          = f.password_field :password, placeholder: "Contraseña", class: "form-control", required: true

      %div.col-sm-12
        %div.form-group
          = f.password_field :password_confirmation, placeholder: "Confirmar contraseña", class: "form-control", required: true
      
      %div.col-sm-12
        = link_to "Cancelar", users_path, class: "btn btn-white"
        = f.submit "Actualizar", class: "btn btn-primary ca-suc"


  
