%div.ibox-title
  %h5= "Listado de Usuarios"
  = link_to "Nuevo", new_user_path, class: "btn btn-primary ca-crear"

%div.ibox-content
  %div.row
    = search_form_for @q, remote: true do |f|
      %div.col-sm-4
        %div.input-group
          = f.text_field :first_name_or_last_name_or_email_cont, {placeholder: "Search", class: "input-sm form-control"}
          %span.input-group-btn
            = f.submit "Buscar", class: "btn btn-sm btn-primary" 

  %div.table-responsive
    %table.table.table-striped
      %thead
        %td ID
        %td Nombre
        %td Email
        %td Rol
        %td Estatus
        %td Acciones
      %tbody#users_result
        = render 'users', users: @users
