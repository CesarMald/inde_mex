%div.ibox-title
  %h5= "Listado de Usuarios"
  = link_to "Nuevo", new_user_path, class: "btn btn-primary ca-crear"

%div.ibox-content
  %div.row
    %div.col-sm-4
      %div.input-group
        %input{type: "text", placeholder: "Search", class: "input-sm form-control"}
        %span.input-group-btn
          %button{type: "button", class: "btn btn-sm btn-primary"} Buscar

  %div.table-responsive
    %table.table.table-striped
      %thead
        %td ID
        %td Nombre
        %td Email
        %td Acciones
      %tbody
        - @users.each do |user|
          %tr
            %td= user.id
            %td= user.complete_name
            %td= user.email
            %td
              = link_to user, class: "ca-actions" do
                %i.fa.fa-file-text.text-navy
              = link_to edit_user_path(user), class: "ca-actions" do
                %i.fa.fa-pencil.text.navy
              = link_to user, { method: :delete, data: { confirm: "¿Estás seguro?" } } do
                %i.fa.fa-remove.text-navy
